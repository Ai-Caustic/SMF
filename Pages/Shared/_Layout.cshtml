<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SMF</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SMF.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
   
</head>
<body onload="load()">
    <header>
        <span>
            <img class="logoMoran" src="~/Images/moranlogo.png" />
        </span>    
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer-nav" id="footer-nav">
        <div class="footer">
            <div class="sec aboutus">
                <h2>About Us</h2>
                <p>
                    SmartMoran connects smart devices to work in unison, delivering a truly intelligent smart home experience that
                    makes your life convenient, safe, and enjoyable.
                </p>
            </div>
        <hr class="hr">
        </br>
        <div class="copyright-text">
            <p>
                Copyright &copy; 2023 Smart Moran. Made By Victor &nbsp;
                <a href="mailto:victormichenim@gmail.com">
                    <i class="fa fa-envelope" id="email_button"></i>
                </a>
                    <a asp-area="" asp-page="/Privacy">Privacy
                        </a>
            </p>
        </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/6a2471a53c.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>